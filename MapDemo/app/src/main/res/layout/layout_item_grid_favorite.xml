<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_margin="10dp"
            android:layout_height="260dp"
            android:background="@drawable/background_city"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:background="@drawable/background_fullbutton"
                    android:id="@+id/imgAccom"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_accom">
                </ImageView>

            </FrameLayout>

            <TextView
                android:id="@+id/tvxName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kỹ thuật"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight ="10dp"
                android:layout_marginLeft="10dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:id="@+id/txvAddress"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Kỹ thuật"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:layout_marginRight ="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:padding="3dp"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/background_city"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_favorite" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</layout>