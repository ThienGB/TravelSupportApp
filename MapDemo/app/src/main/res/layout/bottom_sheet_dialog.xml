<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn loại địa điểm"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quán ăn"/>

            <RadioButton
                android:id="@+id/radioHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỗ ở"/>

            <RadioButton
                android:id="@+id/radioCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quán coffee"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chọn khoảng cách tối đa"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/radioGroupDistance"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio20km"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20 km"/>

            <RadioButton
                android:id="@+id/radio10km"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10 km"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áp dụng"/>

    </LinearLayout>

</layout>