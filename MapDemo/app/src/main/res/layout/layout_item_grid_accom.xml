<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_margin="10dp"
            android:layout_height="250dp"
            android:background="@drawable/background_city"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:background="@drawable/background_fullbutton"
                    android:id="@+id/imgAccom"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_accom">
                </ImageView>
                <TextView
                    android:id="@+id/txvFreeRoom"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_freeroom"
                    android:text="3 rooms left"
                    android:textColor="#040303"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:padding="5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvxName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kỹ thuật"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight ="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/txvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kỹ thuật"
                android:textSize="14dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_marginRight ="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

</layout>